# kevin-ci example control file

tamale:
	- output: wtf
	mkdir wtf
	touch wtf/asdf wtf/stuff
	echo "do you like tamale?"
	sleep 1
	echo "hot, hot tamale?"
	python -c "import sys; exit(not True == sys.stdout.isatty())"

answer: tamale
	- env: answer="42"
	python3 -c 'import os; exit(not os.environ["answer"] == "42")'

silentcheck:
	- hidden
	test -r /etc/passwd
	whoami

great_success: answer silentcheck
	- output: test
	echo "raus raus raus, die nyan-katze" > test
	echo "cya!"
	python3 -c '[print("lol asdf wtf %d" % i) for i in range(1024 * 3)]'
